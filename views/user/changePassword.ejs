<%- include('../layouts/userlayout/header.ejs') %>

<!-- Add your custom CSS styles here -->
<style>
  /* Add your custom styles for the Change Password page here */
</style>

<section class="ftco-section bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="text-center mb-5">
          <h2 class="mt-3">Change Password</h2>
        </div>
        <div class="card">
          <div class="card-body">
            <form action="/changePassword" method="post">
              <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
              </div>
              <div class="alert alert-danger" id="passwordMismatchMessage" style="display: none;">
                Current password is incorrect. Please try again.
              </div>
              
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
              </div>
              <div class="alert alert-danger" id="newpasswordMismatchMessage" style="display: none;">
                New passwords do not match. Please check and try again.
              </div>
              
              <div class="form-group">
                <label for="confirmNewPassword">Confirm New Password</label>
                <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" required>
              </div>
              <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Change Password</button>
              </div>
            </form>
            <div class="alert alert-success" id="passwordChangedMessage" style="display: none;">
                Password has been changed successfully.
              </div>
              
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



<script>
    // Show the password mismatch message when the page loads
    if (window.location.search.includes('passwordMismatch=true')) {
      $('#passwordMismatchMessage').show();
    }
  </script>
 
<script>
    // Show the password changed message when the page loads
    if (window.location.search.includes('passwordChanged=true')) {
      $('#passwordChangedMessage').show();
    }
  </script>
  
<script>
    // Show the password mismatch message when the page loads
    if (window.location.search.includes('passwordMismatch=true')) {
      $('#newpasswordMismatchMessage').show();
    }
  </script>
  
  
  

