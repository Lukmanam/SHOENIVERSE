<%- include('../layouts/userlayout/header.ejs') %>

<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
/>
<div class="hero-wrap hero-bread" style="background-image: url('images/bg_6.jpg');">
    <div class="container">
      <div class="row no-gutters slider-text align-items-center justify-content-center">
        <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Signup</span></p>
          <h1 class="mb-0 bread">Signup</h1>
        </div>
      </div>
    </div>
  </div>
<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="card border-dark">
    <div class="card-body  rounded-0">
    
      <form action="/signup" method="post">
        <div class="form-group ">
          <label for="name">Name:</label>
          <input
            type="text"
            class="form-control "
            id="name"
            name="name"
            placeholder="Enter your name"
            pattern="^[a-zA-Z\s]+"
            required
          />
        </div>
        <div class="form-group mt-3">
          <label for="email">Email:</label>
          <input
            type="email"
            class="form-control rounded-0"
            id="email"
            name="email"
            placeholder="Enter your email"
            pattern="[a-zA-Z0-9.]+@gmail\.com"
            title="Please enter a valid @gmail.com email address"
            required
          />
        </div>
        <div class="form-group mt-3">
          <label for="mno">Mobile No:</label>
          <!-- <input type="text" class="form-control" id="mno" name="mno" placeholder="Enter Mobile no" required> -->
          <input
            type="text"
            class="form-control rounded-0"
            id="mno"
            name="mno"
            placeholder="Enter Mobile no"
            pattern="\d{1,10}"
            title="Please enter a number with a maximum of 10 digits and without any characters"
            required
          />
        </div>
        <div class="form-group mt-3">
          <label for="password">Password:</label>
          <input
            type="password"
            class="form-control rounded-0"
            id="password"
            name="password"
            placeholder="Enter password"
            required
          />
        </div>
        <input type="submit" value="SignUp" class="btn btn-dark mt-3 rounded-0">

        <p>already registered ? <a href="/login" class="mt-3">Click Here</a></p>
      </form>
      <script></script>

      <% if(typeof message !== 'undefined') { %>
      <p style="color: rgb(243, 84, 84)"><%= message %></p>
      <% } %>
    </div>
  </div>
</div>

<%- include('../layouts/userlayout/footer.ejs') %>
